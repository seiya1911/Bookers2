<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <h1>User info</h1>
    <%= form_with model:@user, local:true do |f| %>
    <div id="error_explanation">
    <% if @user.errors.any? %>
    <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
    <il><% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
   </il>
   <% end %>
   </div>
    <div class="form-group">
     <label for="user_name">Name</label>
     <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <label for="user_image">Image</label>
      <%= f.attachment_field :profile_image %>
    </div>
    <div class="form-group">
      <label for="user_introduction">Introduction</label>
      <%= f.text_area :introduction %>
    </div>

       <%= f.submit "Update User", class:"btn btn-secondary" %>

    <% end %>
  </div>
 </div>
</div>