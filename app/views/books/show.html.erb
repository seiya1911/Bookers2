<div class="profile-container">
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <h3 class="profile-name">name<%= @user.name %></h3>
  <h3 class="profile-introduction">introduction<%= @user.introduction %></h3>
 <% if @user.id == current_user.id %>
    <p><%= link_to "Edit", edit_user_path(@user) %></p>
  <% end %>
</div>

<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<div class="post-body">
  <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
  <p><%= @book.user.name %></p>
  <p><%= @book.title %></p>
  <p><%= @book.body %></p
  <% if @book.user == current_user %>
  <%= link_to "Destroy", book_path(@book), method: :delete %>
  <% end %>
</div>